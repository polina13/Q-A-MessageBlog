{{#if addNewAnswer}}
<div>
  <form>
    <div class="form-group">
      <label for="text">Text</label>
      {{input value=text id="text"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <button class = "btn btn-success" {{action 'saveAnswer'}}>Save</button>
    <br>
    <button class = "btn btn-warning" {{action 'answerFormHide'}}>Hide</button>
    <br>
  </form>
</div>
{{else}}
<hr/>
<button class = "btn btn-primary"{{action 'answerFormShow'}}>Answer this question:</button>
{{/if}}
