{{#if addNewQuestion}}
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="information">Information</label>
      {{textarea value=information id="information"}}
    </div>
    <button class = "btn btn-danger" {{action 'saveQuestion'}}>Save</button>

    <button class = "btn btn-warning" {{action 'questionFormHide'}}>Hide</button>
  </form>
</div>
{{else}}
<br>
<button class="btn btn-warning"{{action 'questionFormShow'}}>Add New Question</button>
{{/if}}
