{{#if updateYourQuestion}}
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder=question.title}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=question.author}}
    </div>
    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category" placeholder=question.category}}
    </div>
    <div class="form-group">
      <label for="information">Information</label>
      {{input value=information id="information" placeholder=question.information}}
    </div>

    <button {{action 'updateQuestion' question}}>Edit Question</button>
  </form>
{{else}}
<div class="container">
  <button class="btn btn-success col-sm-6" {{action "updateQuestionForm"}}>Edit Question?</button>
</div>
{{/if}}
